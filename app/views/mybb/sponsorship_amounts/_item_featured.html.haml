- content_tag_for(:tr, resource, :class => "first #{cycle(:odd, :even)}") do
  %td.image.large= image_tag(resource.child.album.cover_thumb(154), :alt => "Featured child")
  %td.data
    .child_name= h resource.child.try(:first_name)
    .type Child Sponsorship
  %td.cost
    %p Choose an amount you wish to donate:
    = select_tag "sponsorship_amounts[#{resource.id}][amount]", options_for_select(Sponsorship::AMOUNTS)
